// ui/pages/login_page.slint

// Make sure you import ALL standard widgets you use from "std-widgets.slint"
// You had StandardButton, but LineEdit was missing.
import { StandardButton, LineEdit} from "std-widgets.slint";

export component LoginPage inherits Rectangle {
    in-out property <string> username: "";
    in-out property <string> password: "";
    callback login_requested(string, string);

    width: 100%;
    height: 100%;
    background: #e0f2f7; // Light blue

    VerticalLayout {
        alignment: center;
        spacing: 15px;

        Text { text: "Login"; font-size: 32px; font-weight: 700; }

        // LineEdit is now imported and recognized
        LineEdit { placeholder-text: "Username"; text: root.username; width: 250px; }
        LineEdit { placeholder-text: "Password"; text: root.password; width: 250px; }

        StandardButton {
            // 'text' property is now recognized because StandardButton is fully imported
            // text: "Login";
            kind: apply;
            clicked => {
                login_requested(root.username, root.password);
            }
        }
    }
}
